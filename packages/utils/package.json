{
  "name": "@repo/utils",
  "version": "0.0.0",
  "private": true,
  "imports": {
    "#src/*": [
      "./src/*.ts",
      "./src/*.tsx"
    ]
  },
  "exports": {
    "./*": "./src/*.ts"
  },
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "color": "^5.0.0",
    "dayjs": "^1.11.13",
    "nanoid": "^5.1.5",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.15.3",
    "eslint": "^9.29.0",
    "prettier": "^3.5.3",
    "typescript": "5.8.2"
  }
}
